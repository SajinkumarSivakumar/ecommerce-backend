<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <title>Credit Note</title>

  <style>
    body {
      font-family: Arial, Helvetica, sans-serif;
      font-size: 12px;
      color: #000;
      margin: 20px;
    }

    .header {
      text-align: center;
      margin-bottom: 20px;
    }

    .header h1 {
      font-size: 22px;
      margin: 0;
      letter-spacing: 1px;
    }

    .box {
      border: 1px solid #000;
      margin-bottom: 10px;
    }

    .row {
      display: flex;
      border-bottom: 1px solid #000;
    }

    .row:last-child {
      border-bottom: none;
    }

    .col {
      flex: 1;
      padding: 8px;
      border-right: 1px solid #000;
    }

    .col:last-child {
      border-right: none;
    }

    .label {
      font-weight: bold;
      margin-bottom: 4px;
      display: block;
    }

    .amount-box {
      text-align: right;
      font-size: 14px;
      font-weight: bold;
    }

    .footer {
      margin-top: 40px;
      display: flex;
      justify-content: space-between;
    }

    .sign-box {
      width: 200px;
      text-align: center;
      border-top: 1px solid #000;
      padding-top: 5px;
    }
  </style>
</head>

<body>

  <!-- HEADER -->
  <div class="header">
    <h1>CREDIT NOTE</h1>
  </div>

  <!-- COMPANY INFO -->
  <div class="box">
    <div class="row">
      <div class="col">
        <span class="label">Company Name</span>
        {{details.companyName ? details.companyName : '---'}}
      </div>
      <div class="col">
        <span class="label">Customer</span>
        {{details.customer_name ? details.customer_name : '---'}}
      </div>
    </div>

    <div class="row">
      <div class="col">
        <span class="label">Email</span>
        {{details.email ? details.email : '---'}}
      </div>
      <div class="col">
        <span class="label">GST</span>
        {{details.gst ? details.gst : '---'}}
      </div>
    </div>
  </div>

  <!-- CREDIT NOTE INFO -->
  <div class="box">
    <div class="row">
      <div class="col">
        <span class="label">Credit Note No</span>
        {{details.creditNoteCode ? details.creditNoteCode : '---'}}
      </div>
      <div class="col">
        <span class="label">Date</span>
        {{details.created_at ? details.created_at : '---'}}
      </div>
    </div>

    <div class="row">
      <div class="col">
        <span class="label">Invoice No</span>
        {{details.invoiceId ? details.invoiceId : '---'}}
      </div>
      <div class="col amount-box">
        <span class="label">Credit Amount</span>
        {{details.creditnoteAmount ? details.creditnoteAmount : '0.00'}}
      </div>
    </div>
  </div>

  <!-- DESCRIPTION -->
  <div class="box">
    <div class="row">
      <div class="col">
        <span class="label">Description</span>
        {{details.description ? details.description : '---'}}
      </div>
    </div>
  </div>

  <!-- FOOTER -->
  <div class="footer">
    <div class="sign-box">Prepared By</div>
    <div class="sign-box">Authorized Signatory</div>
  </div>

</body>
</html>
